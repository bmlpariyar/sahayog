<div class="p-2 mt-5">
  <h2 class="text-xl font-bold text-gray-800">Words of support form doners</h2>
  <% if @project.contributions.any? %>
    <% @project.contributions.each do |contribution| %>
      <% if contribution.comment.present? %>
        <div class="mt-2 space-y-3">
          <div class="bg-white p-4 rounded-lg shadow">
            <div class="flex items-center mb-2">
              <% if contribution.user.user_profile.avatar.blank? %>
                <%= image_tag  'default_user.jpg', class:"w-10 h-10 rounded-full mr-3" %>
              <% else %>
                <%= image_tag contribution.user.user_profile.avatar, class:"w-10 h-10 rounded-full mr-3" %>
              <% end %>
              <div>
                <h3 class="font-semibold"><%=  contribution.user.user_profile.display_name %></h3>
                <p class="text-sm text-gray-500">Posted on <%= contribution.created_at.strftime("%b %d, %Y") %></p>
              </div>
            </div>
            <p class="text-gray-700"><%= contribution.comment %></p>
            <div class="flex items-center mt-2">
              <button class="text-blue-500 hover:text-blue-600 mr-2">
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>