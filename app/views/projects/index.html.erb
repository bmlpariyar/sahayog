<div class="w-full flex items-center justify-center ">
  <div class="w-[80%]">
    <% content_for :title, "Projects" %>
    <div class="flex justify-between items-center">
      <div>
        <h1 class="font-bold text-4xl">Projects</h1>
        <h1 class="font-bold text-xl"><%= current_user.email if current_user %></h1>
      </div>
      <%= link_to "New project", new_project_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>
    <div id="projects" class="min-w-full">
      <div class= rounded-xl mt-10">
        <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
          <h2 class="sr-only">Products</h2>
          <div class="grid gap-x-6 gap-y-10 grid-cols-4">
            <% @projects.each do |project| %>
              <%= render project %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
